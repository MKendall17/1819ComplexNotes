% Let's define some theorem environments
% To use later in the paper

%% Theorem setup
\RequirePackage{thmtools}
\RequirePackage[framemethod=TikZ]{mdframed}

%% From Evan Chen's dot files
\mdfdefinestyle{mdgreenbox}{%
            linewidth=0.5pt,
			skipabove=12pt,
			frametitleaboveskip=5pt,
			frametitlebelowskip=0pt,
			skipbelow=2pt,
			frametitlefont=\bfseries,
			innertopmargin=4pt,
			innerbottommargin=8pt,
			nobreak=true,
			backgroundcolor=SpringGreen!15,
			rightline=false,
			leftline=false,
			topline=false,
			bottomline=false,
			linecolor=green,
		}

\declaretheoremstyle[
  headfont=\color{RedViolet}\normalfont\bfseries,
  bodyfont=\color{RedViolet}\normalfont,
  mdframed={style=mdgreenbox},
]{thmgreenbox}

\declaretheorem[
  style=thmgreenbox,
  name=Theorem,
  numberwithin=subsection,
]{theorem}

% By including [theorem], the lemma follows the numbering of theorem
% e.g. Thm 1, Lemma 2, Thm 3, Thm 4, \dots
\theoremstyle{definition} % other options: definition, remark
\newtheorem{definition}[theorem]{Definition} % the star prevents numbering
\newtheorem{lemma}{Lemma}[theorem]
\newtheorem{cor}{Corollary}[theorem]
\newtheorem{remark}[subsection]{Remark}
\newtheorem{example}[theorem]{Example}
\newtheorem{exercise}[theorem]{Exercise}


